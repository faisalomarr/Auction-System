@model IEnumerable<ProjectApp.Models.Auctions.AuctionsVm>

@{
Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
    <style>
        .vertical-links {
            display: flex;
            flex-direction: column;
            gap: 10px; /* Adjust the spacing between links */
            margin-bottom: 20px;
        }
    </style>
</head>
<body>
<div class="vertical-links">
    <a asp-action="Create">Create New Auction</a>
    <a asp-action="MyAuctions">Show My Auctions</a>
    <a asp-action="CreateBid">Place Bids</a>
    <a asp-action="MyAuctionsWon">Auctions Won</a>
</div>
<table class="table">
    <thead>
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Description)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Price)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.AuctionEndTime)
        </th>
        <th></th>
    </tr>
    </thead>
    <tbody>
    @foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Description)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Price)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.AuctionEndTime)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
            @Html.ActionLink("Details", "Details", new { id = item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id = item.Id })
        </td>
    </tr>
    }
    </tbody>
</table>
</body>
</html>
