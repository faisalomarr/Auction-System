@model ProjectApp.Models.Bids.AddBidVm

@{
    ViewData["Title"] = "Create Bid";
}

<h1>Create Bid</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="CreateBid" method="post">
            @Html.AntiForgeryToken() <!-- Anti-forgery token -->

            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <!-- Auction ID -->
            <div class="form-group">
                <label asp-for="AuctionId" class="control-label"></label>
                <input asp-for="AuctionId" class="form-control" />
                <span asp-validation-for="AuctionId" class="text-danger"></span>
            </div>

            <!-- Bid Price -->
            <div class="form-group">
                <label asp-for="Price" class="control-label"></label>
                <input asp-for="Price" class="form-control" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>

            <div class="form-group">
                <button type="submit" class="btn btn-primary">Create Bid</button>
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</div>